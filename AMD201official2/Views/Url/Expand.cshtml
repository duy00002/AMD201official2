@model Url
@{
    ViewData["Title"] = "Expand URL";
}

<h2>Expand URL</h2>

<form method="get">
    <div class="form-group">
        <label for="ShortLink">Enter Shortened URL:</label>
        <input type="text" class="form-control" id="ShortLink" name="ShortLink" />
    </div>

    <button type="submit" class="btn btn-primary">Expand</button>
</form>

@if (ViewData.ModelState[""].Errors.Any())
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState[""].Errors)
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (Model != null)
{
    <div class="mt-3">
        <h3>Original URL:</h3>
        <p>@Model.OriginalLink</p>
    </div>
}


