@model Url
@{
    ViewData["Title"] = "Expand URL";
    var shorturl = ViewData["ShortenedUrl"];
    var message = TempData["Message"] as string;
}

<h2>Expand URL</h2>

<form method="get">
    <div class="form-group">
        <label for="ShortLink">Enter Shortened URL:</label>

        <br /><br />

        <input type="text" class="form-control" id="ShortLink" name="ShortLink" />


        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger" role="alert">
                @message
            </div>
        }
    </div>

    <br />

    <div class="form-group">
        <input asp-for="ShortLink" class="form-control" value="@shorturl" type="hidden" />
    </div>

    <button type="submit" class="btn btn-primary">Expand</button>
</form>

@if (Model != null)
{
    <div class="mt-3">
        <h3>Original URL:</h3>
        <p>@Model.OriginalLink</p>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            var errorMessage = '@ViewData["ErrorMessage"]';
            if (errorMessage) {
                alert(errorMessage);
            }
        });
    </script>
}



